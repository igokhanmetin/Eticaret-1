@model List<Kategori>

<h1>Kategoriler</h1>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>URL</td>
                    <td>Durum</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Kategori kategori in Model)
                {
                    <tr>
                        <td>@kategori.Ad</td>
                        <td>@kategori.Url</td>
                        <td>
                            @if (kategori.Durum == 1)
                            {
                                <span>Aktif</span>
                            }
                            else
                            {
                                <span>Pasif</span>
                            }
                        </td>
                        <td>
                            @if (kategori.Durum == 1)
                            {
                                <a href="#" class="btn btn-sm btn-warning">Pasifleştir</a>
                            }
                            else
                            {
                                <a href="#" class="btn btn-sm btn-success">Aktifleştir</a>
                            }
                            <a href="#" class="btn btn-sm btn-primary">Düzenle</a>
                            <a href="#" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>