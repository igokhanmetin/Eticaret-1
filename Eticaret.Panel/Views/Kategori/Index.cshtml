@model List<Kategori>

<h1>Kategoriler</h1>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>URL</td>
                    <td>Durum</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Kategori kategori in Model)
                {
                    <tr>
                        <td>@kategori.Ad</td>
                        <td>@kategori.Url</td>
                        <td>
                            @if (kategori.Durum == 1)
                            {
                                <span>Aktif</span>
                            }
                            else
                            {
                                <span>Pasif</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-end align-items-center">
                                @if (kategori.Durum == 1)
                                {
                                    <a asp-controller="Kategori" asp-action="Pasiflestir" asp-route-id="@kategori.Id" class="btn btn-sm btn-warning me-2">Pasifleştir</a>
                                }
                                else
                                {
                                    <a asp-controller="Kategori" asp-action="Aktiflestir" asp-route-id="@kategori.Id" class="btn btn-sm btn-success me-2">Aktifleştir</a>
                                }
                                <a asp-controller="Kategori" asp-action="Duzenle" asp-route-id="@kategori.Id" class="btn btn-sm btn-primary me-2">Düzenle</a>
                                <a asp-controller="Kategori" asp-action="Sil" asp-route-id="@kategori.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>